<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-4">Admin Dashboard</h1>
      <%- include('../../partial/logout') %>
    </div>

    <!-- Posts Grid -->
    <div class="space-y-6">
      <% posts.forEach(post => { %>
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <!-- Post Header -->
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-2xl font-semibold text-gray-800"><%= post.title %></h2>
            <span class="px-3 py-1 text-xs font-medium rounded-full <%= post.status === 'published' ? 'bg-green-100 text-green-800' : post.status === 'draft' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
              <%= post.status %>
            </span>
          </div>

          <!-- Post Content -->
          <p class="text-gray-600 mb-4 line-clamp-3"><%= post.content %></p>

          <!-- Post Footer -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= post.author ? post.author.charAt(0).toUpperCase() : user.username.charAt(0).toUpperCase() %></span>
              </div>
              <span class="text-sm text-gray-700 font-medium"><%= post.author || user.username %></span>
            </div>
            <span class="text-xs text-gray-500"><%= new Date(post.created_at).toLocaleDateString() %></span>
          </div>
        </article>
      <% }) %>
    </div>

    <!-- Empty State -->
    <% if (posts.length === 0) { %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No posts available yet.</p>
      </div>
    <% } %>
  </div>
</div>
