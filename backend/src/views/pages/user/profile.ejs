<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-3xl font-bold mb-6 text-center">User Profile</h1>

  <a href="/api/user">Back</a>

  <form action="/api/user/profile" method="POST" class="space-y-4">
    <!-- Username -->
    <div>
      <label for="username" class="block font-medium mb-1">Username:</label>
      <input
        type="text"
        id="username"
        name="username"
        value="<%= user.username %>"
        required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <!-- Email -->
    <div>
      <label for="email" class="block font-medium mb-1">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= user.email %>"
        required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <!-- Password -->
    <div>
      <label for="password" class="block font-medium mb-1">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Leave blank to keep current password"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <!-- Role & Timestamps -->
    <div class="mt-4 text-gray-600">
      <p><strong>Role:</strong> <%= user.role %></p>

      <p><strong>Created At:</strong> <%= formatUpdated(user.created_at) %></p>
      <% if(user.updated_at) { %>
      <p>
        <strong>Last Updated:</strong> <%= formatUpdated(user.updated_at) %>
      </p>
      <% } %>
    </div>

    <!-- Submit Button -->
    <div class="mt-6 text-center">
      <button
        type="submit"
        class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition-colors"
      >
        Update Profile
      </button>
    </div>
  </form>
</div>
